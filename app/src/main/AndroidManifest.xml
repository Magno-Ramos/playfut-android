<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".ui.PlayFutApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.PlayFut">
        <activity
            android:name=".ui.features.home.HomeActivity"
            android:exported="true">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.features.groups.form.GroupsFormActivity"
            android:exported="false" />
        <activity
            android:name=".ui.features.groups.menu.GroupMenuActivity"
            android:exported="false" />
        <activity
            android:name=".ui.features.groups.settings.GroupSettingsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.features.player.list.PlayerListActivity"
            android:exported="false" />
        <activity
            android:name=".ui.features.player.form.PlayerFormActivity"
            android:exported="false" />
        <activity
            android:name=".ui.features.rounds.sorting.form.RoundSortActivity"
            android:exported="false" />
        <activity
            android:name=".ui.features.rounds.playing.RoundPlayingActivity"
            android:exported="false" />
    </application>
</manifest>